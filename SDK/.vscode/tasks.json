{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "all",
            "type": "shell",
            "windows": {
                "command": "cmd",
                "args": ["/c", "product_compile_image.bat", "all"]
            },
            "problemMatcher": ["$gcc"],  // Automatically capture make errors/warnings
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "cmd",
                "args": ["/c", "product_compile_image.bat", "clean"]
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": "build"
        }
    ]
}
